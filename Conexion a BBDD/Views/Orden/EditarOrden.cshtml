@model Orden
@{
    ViewData["Title"] = "EditarOrden";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Index</title>
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </head>
    <body>
        <br />
        <h2>Editar Orden @Html.DisplayTextFor(m => m.ord_fecha_de_generacion)</h2>
        <br />
        <form asp-action="EditarOrden" asp-controller="Orden" method="post">
            <div class="form-group">
                <input asp-for="id_orden" type="text" class="form-control" />
                <div class="form-group">
                    <label for="exampleInputEmail1">Nº Cliente</label>
                    <input asp-for="ord_cliente" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Nº Vendedor</label>
                    <input asp-for="ord_vendedor" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Fecha de Generacion</label>
                    <input asp-for="ord_fecha_de_generacion" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Nº Cliente</label>
                    <input asp-for="ord_id_cliente" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Nº Empleado</label>
                    <input asp-for="ord_id_empleado" type="text" class="form-control">
                </div>
                <br />
                <button type="submit" class="btn btn-primary">Editar</button>
                <a asp-action="ListarOrden" asp-controller="Orden" class="btn btn-warning">Volver al listado</a>
            </div>
        </form>
    </body>
</html>

