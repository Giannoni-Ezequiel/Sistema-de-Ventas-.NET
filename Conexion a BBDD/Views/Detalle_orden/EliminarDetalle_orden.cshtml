@model Detalle_orden
@{
    ViewData["Title"] = "EliminarDetalle_orden";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Index</title>
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </head>
    <body>
        <br />
    <h2>Eliminar Detalle @Html.DisplayTextFor(m => m.id_detalle_orden)</h2>
    <br />
    <form asp-action="EliminarDetalle_orden" asp-controller="Detalle_orden" method="post">
        <input asp-for="id_detalle_orden" type="hidden" class="form-control" />
        <p>Seguro que quieres eliminar el registro de: @Html.DisplayTextFor(m => m.id_detalle_orden)?</p>
        <br />
            <button type="submit" class="btn-danger">
                Eliminar</button>
        <a asp-action="ListarDetalle_orden" asp-controller="Detalle_orden" class="btn btn-warning">
            Volver al listado
        </a>
        </form>
    </body>
</html>

