@model List<Detalle_orden>
@{
    ViewData["Title"] = "ListarDetalle_orden";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Index</title>
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
	<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>
<body>
	<div class="container">
		<div class="table-responsive">
			<div class="table-wrapper">
				<div class="table-title">
					<div class="row">
						<div class="col-xs-6">
							<br />
							<h2>Gestionar <b>Detalle_orden</b></h2>
							<br />
						</div>
						<div class="col-xs-6">
							<a asp-action="GuardarDetalle_orden" asp-controller="Detalle_orden" class="btn btn-success">
								<i class="material-icons">&#xE147;</i> <span>Crear Detalle_orden</span>
							</a>
						</div>
					</div>
				</div>
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>ID Orden</th>
							<th>ID Detalle Orden</th>
                            <th>Detalle Ord. Precio</th>
                            <th>Detalle Ord. Cantidad</th>
                            <th>ID Producto</th>
							<th>Acción</th>
						</tr>
					</thead>
					@foreach (var item in Model)
					{
						<tbody>
							<tr>
								<th>@item.id_orden</th>
								<th>@item.id_detalle_orden</th>
								<th>@item.det_ord_precio</th>
								<th>@item.det_ord_cantidad</th>
								<th>@item.id_producto</th>
								<td>
									<a asp-action="EditarDetalle_orden" asp-controller="Detalle_orden" class="edit" asp-route-id="@item.id_detalle_orden">
										<i class="material-icons" data-toggle="tooltip" title="Edit">
                                            <span class="material-symbols-outlined">drive_file_rename_outline</span>
                                        </i>
									</a>
									<a asp-action="EliminarDetalle_orden" asp-controller="Detalle_orden" class="bdanger" asp-route-id="@item.id_detalle_orden">
										<i class="material-icons" data-toggle="tooltip" title="Delete">
											<span class="material-symbols-outlined">delete</span>
										</i>
									</a>
								</td>
							</tr>
						</tbody>
					}
				</table>
			</div>
		</div>
	</div>
</body>
</html>

