@model Cliente
@{
    ViewData["Title"] = "Guardar";
    Layout = "/Views/Shared/_Layout.cshtml";

}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Index</title>
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </head>
    <body>
        <br />
        <h2>Guardar Cliente</h2>
        <br />
        <form asp-action="Guardar" asp-controller="CRUD" method="post">
            <div class="form-group">
                <label for="exampleInputEmail1">Nombre</label>
                <input asp-for="clie_nombre" type="text" class="form-control">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Apellido</label>
                <input asp-for="clie_apellido" type="text" class="form-control">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">DNI</label>
                <input asp-for="clie_dni" type="text" class="form-control">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">CUIT</label>
                <input asp-for="clie_cuit" type="text" class="form-control">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Razón social</label>
                <input asp-for="clie_razon_social" type="text" class="form-control">
            </div>
            <div class="input-group mb-3">
                <label class="input-group-text" for="inputGroupSelect01">Tipo</label>
                <select asp-for="clie_tipo" class="form-select form-control" id="inputGroupSelect01">
                    <option value="1">Empresa</option>
                    <option value="2">Particular</option>  
                </select>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">ID Usuario</label>
                <input asp-for="clie_id_usuario" type="text" class="form-control">
            </div>
            <br />
            <button type="submit" class="btn btn-primary"> Guardar</button>
            <a asp-action="Listar" asp-controller="CRUD" class="btn btn-warning">Volver al listado</a>
         </form>
    </body>
</html>
